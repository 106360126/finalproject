<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/taipei"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@drawable/bg_taipei"
            android:text="TAIPEI"
            android:textAlignment="center"
            android:textColor="#f0f8ff"
            android:textSize="38dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/taichung"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_taichung"
            android:text="TAICHUNG"
            android:textAlignment="center"
            android:textColor="#f0f8ff"
            android:textSize="38dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tainan"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_tainan"
            android:text="TAINAN"
            android:textAlignment="center"
            android:textColor="#f0f8ff"
            android:textSize="38dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/kaohsiung"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_kaohsiung"
            android:text="Kaohsiung"
            android:textAlignment="center"
            android:textColor="#f0f8ff"
            android:textSize="38dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pingtung"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_pingtung"
            android:text="pingtung"
            android:textAlignment="center"
            android:textColor="#f0f8ff"
            android:textSize="38dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/taitung"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_taitung"
            android:text="Taitung"
            android:textAlignment="center"
            android:textColor="#f0f8ff"
            android:textSize="38dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>